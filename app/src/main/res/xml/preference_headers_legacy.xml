<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <Preference android:title="@string/general">
        <intent
            android:action="com.nextgis.mobile.PREFS_GENERAL"
            android:targetClass="com.nextgis.mobile.activity.SettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/map">
        <intent
            android:action="com.nextgis.mobile.PREFS_MAP"
            android:targetClass="com.nextgis.mobile.activity.SettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/location">
        <intent
            android:action="com.nextgis.mobile.PREFS_LOCATION"
            android:targetClass="com.nextgis.mobile.activity.SettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/tracks">
        <intent
            android:action="com.nextgis.mobile.PREFS_TRACKING"
            android:targetClass="com.nextgis.mobile.activity.SettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/ngw_accounts">
        <intent
            android:action="com.nextgis.mobile.PREFS_NGW"
            android:targetClass="com.nextgis.maplibui.activity.NGWSettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/ngid_settings">
        <intent
            android:action="com.nextgis.mobile.PREFS_NGID"
            android:targetClass="com.nextgis.maplibui.activity.NGIDSettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
    <Preference android:title="@string/update_check">
        <intent
            android:action="com.nextgis.mobile.PREFS_UPDATE"
            android:targetClass="com.nextgis.mobile.activity.SettingsActivity"
            android:targetPackage="com.nextgis.mobile"/>
    </Preference>
</PreferenceScreen>